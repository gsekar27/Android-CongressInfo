<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/leg_list_gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:id="@+id/txt_bill_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Name"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/txt_bill_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Details"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/txt_bill_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Details"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bill_forwrd"
        android:layout_width="@dimen/btn_forward_width"
        android:layout_height="@dimen/btn_forward_height"
        android:layout_marginRight="20sp"
        android:layout_alignParentRight="true"
        android:src="@drawable/forward"
        />







</RelativeLayout>